@import "bootstrap-sprockets";
@import "bootstrap";

.cant-see-me {
	display:none;
}

h1{
	margin-top: 30px;
	margin-bottom: 30px;
	color: #FB788E;
	text-shadow: 3px 1px 4px rgba(0, 0, 0, 1);
	text-transform: uppercase;
	font-family: 'Righteous', cursive;
}

h2{
	margin-top: 30px;
	margin-bottom: 30px;
	color: #FB788E;
	text-shadow: 3px 1px 4px rgba(0, 0, 0, 1);
	text-transform: uppercase;
	font-family: 'Righteous', cursive;
}

h3{
	margin-top: 30px;
	margin-bottom: 30px;
	color: #FB788E;
	text-shadow: 3px 1px 4px rgba(0, 0, 0, 1);
	text-transform: uppercase;
	font-family: 'Righteous', cursive;
}

label{
	font-family: 'Lato', sans-serif;
	font-weight: 700;
}

i{
	font-family: 'Lato', sans-serif;
}

p{
	margin:10px;
	font-family: 'Lato', sans-serif;
	color:white;
}

a{
	font-family: 'Lato', sans-serif;
    color: #FB788E;
    text-decoration: none;
}

body > a {
	font-size: 1.5em;
	font-weight: 700;
	text-shadow: 3px 1px 4px rgba(0, 0, 0, 1);
	color:white;
}

form{
	font-family: 'Lato', sans-serif;
	color:white;
	text-shadow: 3px 1px 4px rgba(0, 0, 0, 1);
	font-size: 1.3em;
}

input{
	margin: 10px;
	color:#00ADAE;
	background-color: black;
	border-color: black;
	-webkit-border-radius: 5px;
-moz-border-radius: 5px;
border-radius: 5px;
	
}

form > .button_to > input {
	background-color: #00ADAE;
	color:white;
}

.field > input{
	color: #00ADAE;
	background-color: black;
	border-color: black;
}

input> .-webkit-autofill {
    background-color: black;
    background-image: none;
    color: white;
}

textarea> .-webkit-autofill{
    background-color: black;
    background-image: none;
    color: white;
}

select> .-webkit-autofill {
    background-color: black;
    background-image: none;
    color: white;
}

form > label{
	font-family: 'Righteous', cursive;
	font-weight: 700;
	text-shadow: 3px 1px 4px rgba(0, 0, 0, 1);
	font-size: 3em;
}

form > input > text {
	color: #00ADAE;
	background-color: black;
}

.alert-success {
    background-color: #00ADAE;
    border-color: #00ADAE;
	color: white;
}

.alert-success > h1{
	margin-top: 0px;
	margin-bottom: 0px;
	color:white;
	text-transform: none;
	vertical-align: center;
}

.panel-heading > a{
	font-family: 'Righteous', cursive;
	font-size:2em;
	text-transform: uppercase;
    color: #00ADAE;
    text-shadow: 3px 1px 4px rgba(0, 0, 0, 1);
    text-align: center;
    text-decoration: underline;
    text-decoration-color: #000000;
}

.panel-body > p > .posted-at{
	color: #00ADAE;
}

.panel-body{
	color:#00ADAE;
	background-color: rgba(0,0,0,.7);
	height:100%;
}

.btn {
	border-color: transparent;
	font-family: 'Lato', sans-serif;
}

.btn .btn-primary{
	background-color: #1FC6D9;
	border-color: #1FC6D9;
}

.btn-warning {
    color: #fff;
    background-color: #FB788E;
    border-color: transparent;
}

.btn-danger{
	background-color: #00ADAE;
}

.btn-primary{
	background-color: #1FC6D9;
	border-color: transparent;
}

.btn .btn-danger{
	background-color: #1FC6D9;
	border-color: #1FC6D9;
}

.btn .btn-success{
	background-color: #1FC6D9;
	border-color: #1FC6D9;
}

body{
	margin: 70px;
	background: url(<%= asset_path "books.jpg" %>);
    background-size: cover;
    background-repeat: no-repeat;
    background-color: transparent;
}

.panel{
	border-color: black;
	background-color: transparent;
}

.panel-default > .panel-heading {
	color: white;
    background-color: rgba(255,255,255,.3);
    border-color: black;
}

.panel > .panel-success > .panel-heading{
	color: white;
	background-color: rgba(255,255,255,.3);
    border-color: black;
}

.panel-success > .panel-heading{
	color: white;
	background-color: rgba(255,255,255,.3);
    border-color: black;
}

.panel-default > .panel-footer {
	color: black;
    background-color: rgba(0,0,0,.5);
    border-color: black;
}

.panel-success > .panel-footer{
	color: black;
	background-color: rgba(0,0,0,.5);
    border-color: black;
}

#navbar .btn{
	background-color: transparent;

}


.navbar-inverse .navbar-brand {
    color: white;
}

.navbar{
	font-family: 'Lato', sans-serif;
	font-size:1.5em;
	color:white;
	letter-spacing: .5px;
}

.navbar-brand {
	font-family: 'Righteous', cursive;
	color: white;
	font-size: 2em;
	letter-spacing: 2px;
}