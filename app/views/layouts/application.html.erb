<!DOCTYPE html>
<html>
  <head>
    <title>TtsBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700|Oswald|Pacifico|Righteous" rel="stylesheet">

  </head>

  <body>

  <!-- navbar bullshit -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Blogville", root_path, class: "navbar-brand" %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <div class="navbar-form navbar-right">
              <% if user_signed_in? %>
                <%= link_to "Your Posts", your_posts_path, class: "btn btn-success pull-left" %>
                <%= link_to "New Post", new_blog_post_path, class: "btn btn-success pull-left"%>
                <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary pull-left" %>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger pull-right" %>
              <% else %>
                <%= link_to "Sign in", new_user_session_path, class: 'btn btn-success' %>
                <%= link_to "Forgot your password?", new_user_password_path, class: 'btn btn-warning' %>
              <% end %>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
  
    <%= yield %>
   </div>
  </body>
</html>
